{
  "compilerOptions": {
    "target": "ES2020", // The ECMAScript target version (adjust as needed)
    "module": "CommonJS", // Use CommonJS modules (standard in Node.js)
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // For compatibility with ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Source directory
    "resolveJsonModule": true // Allow importing JSON files
  },
  "include": [
    "src/**/*.ts" // All TypeScript files in the src directory
  ]
}
